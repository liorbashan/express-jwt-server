{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*Controller.ts"],
    "spec": {
        "securityDefinitions": {
            "jwt": {
                "type": "jwt",
                "name": "jwt",
                "scopes": {
                    "admin": "can update schema",
                    "editor": "can edit"
                }
            }
        },
        "outputDirectory": "dist",
        "specVersion": 3
    },
    "routes": {
        "routesDir": "build",
        "authenticationModule": "./src/auth/authentication.ts"
    }
}
